<%@ Register Src="~/products/productgrid.ascx" TagName="productgrid" TagPrefix="productgrid" %>

<asp:Content ID="Content1" ContentPlaceHolderID="head" Runat="Server">
    <style type="text/css">
        .prod_item
        {
            display:none;
        }
        
        .filter
        {
            display:table-cell;
            padding-right:40px;
        }
        
       .segment_body .segment_title
        {
            font-size:41px;
            line-height:45px;
            padding-top:40px;
            margin-left:50px; 
            margin-right:20px;
            color:#e8e8e8;
        }
        
        .segment_body p
        {
            font-size:18px;
            line-height:24px;
            padding-top:10px;
            margin-left:50px;
            margin-right:20px;
        }
        
        @media all and (max-width:920px) 
	    {
	        .segment_body .segment_title
            {
                margin-right:10px;
            }
            
            .segment_body p
            {

                margin-right:10px;
            }
	    }
	    
	    @media all and (max-width:960px) 
	    {
            .segment_body .twocolumn
            {

                width:100%;
            }
            
            .segment_body .segment_title
            {
                padding-top:10px;
                margin-left:0px;
            }
            
            .segment_body p
            {
                margin-left:0px;
            }
	    }
        
        @media all and (max-width:770px) 
	    {
	        .filter
            {
	            padding-right:20px;
            }
	    }
        
        @media all and (max-width:690px) 
	    {
	        .filter
            {
	            display:table-row;
	            padding-right:0px;
            }
            
            .filter_title
            {
                margin-top:20px;
            }
	    }
    </style>
    
    <script type="text/javascript">
        // Checkbox CSS
        $(function() {
            $('#checkboxes').jqTransform({ imgPath: '/js/jqtransformplugin/img/' });
        });

        $(document).ready(function() {
            $(".alsoview_overlay").attr("src", "/images/products/also_view_red.png");
        });

        function loadModels() {
            $('.prod_item').each(function(i) {
                $(this).delay(200 * i).fadeIn(500);
            });
        }
    </script>
    
</asp:Content>
